<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ShedView">

    <ImageView
        android:id="@+id/fuelImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/fuel_1" />

    <TextView
        android:id="@+id/txtShedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shed Name:"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/txtShedNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="200dp"
        android:textSize="30sp"
        android:layout_marginTop="-78dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/txtShedPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shed No:"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/txtShedPhoneNoValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="180dp"
        android:layout_marginTop="-78dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/txtShedStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel Status:"
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/txtShedStatusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_marginStart="200dp"
        android:layout_marginTop="-78dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_background_primary"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAlreadySignup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/alreadyhave"
        android:text="I have an account"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</LinearLayout>